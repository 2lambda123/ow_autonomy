#include "AntennaDefs.h"

Command pan_antenna (Real);
Command take_picture ();

PanAndShoot:
{
  In Real PanAngle;

  log_info ("Commanding pan ", PanAngle, " degrees.");
  pan_antenna (PanAngle * D2R);
  Wait (ShortWait);
  take_picture();
}
